@model IEnumerable<PruebaMiguelArias.Models.Appointment>
<h1 class="text-center mb-5">Gestion de Citas</h1>
<div class="row g-3 mb-4 p-3 border rounded shadow-sm align-items-end">
    <div class="col-md-4">
        <label class="form-label fw-bold">Filtrar por Doctor:</label>
        <select class="form-select" onchange="if (this.value) window.location = this.value;">
            <option value="">Seleccione un doctor...</option>
            @foreach (var doctor in ViewBag.Doctors as List<Doctor>)
            {
                <option value="@Url.Action("ByDoctor", new { doctorId = doctor.Id })">@doctor.FullName</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <label class="form-label fw-bold">Filtrar por Paciente:</label>
        <select class="form-select" onchange="if (this.value) window.location = this.value;">
            <option value="">Seleccione un paciente...</option>
            @foreach (var patient in ViewBag.Patients as List<Patient>)
            {
                <option value="@Url.Action("ByPatient", new { patientId = patient.Id })">@patient.FullName</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <a asp-controller="Appointments" asp-action="Index" class="btn btn-secondary w-100">Limpiar</a>
    </div>
    <div class="col-md-2 text-end">
        <a asp-controller="Appointments" asp-action="Create" class="btn btn-primary w-100">Registrar Cita</a>
    </div>
</div>


<div class="card">
    @if (TempData["message"] != null)
    {
        var alertType = TempData["alertType"] ?? "info";
        <div class="alert alert-@alertType" id="alert-message">
            @TempData["message"]
        </div>
    }
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                <th>Id</th>
                <th>Doctor</th>
                <th>Paciente</th>
                <th>Fecha</th>
                <th>Status</th>
                <th>Acciones</th>
                </thead>
                <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.Id</td>
                        <td>@appointment.Doctor.FullName</td>
                        <td>@appointment.Patient.FullName</td>
                        <td>@appointment.AppointmentDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                        <td>@appointment.Status</td>
                        
                        <td>
                            <div class="d-flex flex-column flex-sm-row gap-2">
                                <a asp-controller="Appointments" asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-warning btn-sm">Editar</a>

                                @if (appointment.Status == AppointmentStatus.Scheduled)
                                {
                                    <a asp-controller="Appointments" asp-action="Cancel" asp-route-id="@appointment.Id" class="btn btn-danger btn-sm">Cancelar</a>
                                    <a asp-controller="Appointments" asp-action="MarkAsAttended" asp-route-id="@appointment.Id" class="btn btn-success btn-sm">Atendida</a>
                                }
                            </div>
                        </td>

                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        setTimeout(function () {
            var alert = document.getElementById("alert-message");
            if (alert) {
                alert.style.transition = "opacity 0.5s";
                alert.style.opacity = "0";
                setTimeout(() => alert.remove(), 500);
            }
        }, 3000);

    </script>
}