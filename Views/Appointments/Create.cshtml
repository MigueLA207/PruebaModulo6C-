@model PruebaMiguelArias.Models.Appointment

<div class="container ">
    <div class="row justify-content-center">
        <div class="col-md-5 mt-4 border p-3 rounded bg-white shadow-lg">
            <h2 class="text-center mb-4">Registrar Cita</h2>
            <form asp-controller="Appointments" asp-action="Create" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label for="DoctorId" class="form-label">Doctor</label>
                    <select asp-for="DoctorId" class="form-select" asp-items="@(new SelectList(ViewBag.Doctors, "Id", "FullName"))">
                        <option value="">-- Selecciona un doctor --</option>
                    </select>
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label for="PatientId" class="form-label">Paciente</label>
                    <select asp-for="PatientId" class="form-select" asp-items="@(new SelectList(ViewBag.Patients, "Id", "FullName"))">
                        <option value="">-- Selecciona un paciente --</option>
                    </select>
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label for="AppointmentDate" class="form-label">Fecha y Hora de la Cita</label>
                    <input asp-for="AppointmentDate" type="datetime-local" class="form-control" id="AppointmentDate" required>
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                </div>
                
                
                <button type="submit" class="btn btn-primary w-100">Guardar</button>
                <a asp-controller="Appointments" asp-action="Index" class="btn btn-secondary w-100 mt-1">Volver</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}