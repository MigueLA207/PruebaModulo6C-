@model IEnumerable<PruebaMiguelArias.Models.Doctor>

<h1 class="text-center">Gesti√≥n de Doctores</h1>

<div class="mb-3 p-3 border rounded shadow-sm">
    <div class="d-flex justify-content-between align-items-center">

        <div>
            <a asp-controller="Doctors" asp-action="Create" class="btn btn-primary">Registrar Doctor</a>
        </div>
        
        <form method="get" class="d-flex gap-3 align-items-center">
            <label for="specialtyFilter" class="form-label mb-0">Filtrar por especialidad:</label>
            <select id="specialtyFilter" name="specialty" class="form-select">  
                <option value="">Seleccione especialidad...</option>
                @foreach (var spec in ViewBag.Specialties as IEnumerable<string>)
                {
                    <option value="@spec" selected="@(ViewBag.SpecialtyFilter == spec ? "selected" : null)">@spec</option>
                }
            </select>
            <button type="submit" class="btn btn-primary btn-sm">Filtrar</button>
        </form>
    </div>
</div>


<div class="card">
    @if (TempData["message"] != null)
    {
        var alertType = TempData["alertType"] ?? "info";
        <div class="alert alert-@alertType" id="alert-message">
            @TempData["message"]
        </div>
    }
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Documento</th>
                        <th>Nombre Completo</th>
                        <th>Especialidad</th>
                        <th>Email</th>
                        <th>Telefono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Doctor in Model)
                    {
                        <tr>
                            <td>@Doctor.Id</td>
                            <td>@Doctor.Document</td>
                            <td>@Doctor.FullName</td>
                            <td>@Doctor.Specialty</td>
                            <td>@Doctor.Email</td>
                            <td>@Doctor.Phone</td>
                            <td>
                                <div class="d-flex flex-column flex-sm-row gap-2">
                                    <a asp-controller="Doctors" asp-action="Edit" asp-route-id="@Doctor.Id" class="btn btn-warning btn-sm">Editar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            var alert = document.getElementById("alert-message");
            if (alert) {
                alert.style.transition = "opacity 0.5s";
                alert.style.opacity = "0";
                setTimeout(() => alert.remove(), 500);
            }
        }, 3000);
    </script>
}
