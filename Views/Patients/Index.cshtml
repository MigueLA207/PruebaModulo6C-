@model IEnumerable<PruebaMiguelArias.Models.Patient>
<h1 class="text-center">Gestion de Pacientes</h1>
<div class="text-end mb-3">
    <a asp-controller="Patients" asp-action="Create" class="btn btn-primary">Registrar paciente</a>
</div>
<div class="card">
    @if (TempData["message"] != null)
    {
        var alertType = TempData["alertType"] ?? "info";
        <div class="alert alert-@alertType" id="alert-message">
            @TempData["message"]
        </div>
    }
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                <th>Id</th>
                <th>Documento</th>
                <th>Nombre Completo</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Acciones</th>
                </thead>
                <tbody>
                @foreach (var Patient in Model)
                {
                    <tr>
                        <td>@Patient.Id</td>
                        <td>@Patient.Document</td>
                        <td>@Patient.FullName</td>
                        <td>@Patient.Email</td>
                        <td>@Patient.Phone</td>
                        <td>
                            <div class="d-flex flex-column flex-sm-row gap-2">
                                <a asp-controller="Patients" asp-action="Edit" asp-route-id="@Patient.Id" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-controller="Patients" asp-action="Delete" asp-route-id="@Patient.Id" class="btn btn-danger btn-sm">Eliminar</a>
                                
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        setTimeout(function () {
            var alert = document.getElementById("alert-message");
            if (alert) {
                alert.style.transition = "opacity 0.5s";
                alert.style.opacity = "0";
                setTimeout(() => alert.remove(), 500);
            }
        }, 3000);

    </script>
}